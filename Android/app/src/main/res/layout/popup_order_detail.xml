<!-- res/layout/popup_detail.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/detailOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: 12345"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detailOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Date: 23/11/2323"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/detailTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price: 10.000 VND"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <!-- Thêm các chi tiết khác nếu cần -->
</LinearLayout>
